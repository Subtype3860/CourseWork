@model BlogBLL.ViewModels.Account.LoginViewModel

@{
    ViewData["Title"] = "Логин";
}
<div class="container">
    <form method="post" asp-controller="AccountManager" asp-action="Login" asp-route-model="@Model.ReturnUrl">
        <div asp-validation-summary="ModelOnly"></div>
        <div>
            <label asp-for="UserName"></label><br />
            <input class="form-control" asp-for="UserName" />
            <span asp-validation-for="UserName"></span>
        </div>
        <div>
            <label asp-for="Password"></label><br />
            <input class="form-control" asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div>
            <label asp-for="RememberMe"></label>
            <input asp-for="RememberMe" />
        </div>
        <input class="btn btn-outline-primary" type="submit" value="Войти" />
    </form>
</div>