@model IEnumerable<Tag>
@{
    ViewData["Title"] = "Список тегов";
}
<div class="row">
    <div class="col-10">
        <h2>@($"{ViewData["Title"]}")</h2>
    </div>
    <div class="col-2 text-right">
        <a asp-controller="Tag" asp-action="AddTag">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"/>
            </svg>Добавить тег
        </a>
    </div>
</div>
<div class="container">
    <div class="row row-cols-3 row-cols-md-2 g-4">
        @foreach (var tag in Model)
        {
            <div class="card bg-light ml-3 mt-3 w-75 h-100" style="max-width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">@tag.Stick</h5>
                    <div class="text-right mt-3">
                        Статей по тегу:&ensp;@tag.PostTags.Count()
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row text-center">
                        <div class="col-6">
                            <a asp-controller="Tag" asp-action="UpdateTag" asp-route-tagId="@tag.Id" title="Редактировать">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-vector-pen" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M10.646.646a.5.5 0 0 1 .708 0l4 4a.5.5 0 0 1 0 .708l-1.902 1.902-.829 3.313a1.5 1.5 0 0 1-1.024 1.073L1.254 14.746 4.358 4.4A1.5 1.5 0 0 1 5.43 3.377l3.313-.828zm-1.8 2.908-3.173.793a.5.5 0 0 0-.358.342l-2.57 8.565 8.567-2.57a.5.5 0 0 0 .34-.357l.794-3.174-3.6-3.6z"/>
                                    <path fill-rule="evenodd" d="M2.832 13.228 8 9a1 1 0 1 0-1-1l-4.228 5.168-.026.086z"/>
                                </svg>
                            </a>
                        </div>
                        <div class="col-6">
                            <form class="hide-submit" asp-controller="Tag" asp-action="RemoveTag" asp-route-id="@tag.Id" type="post">
                                <label class="col-1" title="Удалить">
                                    <input type="submit"/>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-trash3-fill" viewBox="0 0 16 16">
                                        <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5m-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5M4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06m6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528M8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5"/>
                                    </svg>
                                </label>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
