@model BlogBLL.ViewModels.Post.GetPostViewModel
@{
}
<div>
    <h3>@Model.Heading</h3>
    <hr/>
    <p>@Model.Body</p>
    @if (Model.Log)
    {
        <div class="row">
            <a class="btn btn-primary" asp-controller="Post" asp-action="UpdatePost" asp-route-id="@Model.Id">Редактировать</a>
            <form asp-controller="Post" asp-action="DeletePost" method="post" asp-route-id="@Model.Id">
                <input type="submit" value="Удалить" class="btn btn-danger"/>
            </form>
        </div>
    }
</div>