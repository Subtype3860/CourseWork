@model BlogBLL.ViewModels.Post.AddPostViewModel

<div>
    <form asp-controller="Post" asp-action="AddPost">
        <div>
            @foreach (var c in Model.Tags!)
            {
                <input type="checkbox" name="TagPostUser" value="@c.Id" />
                @c.Stick
                <span>&nbsp;&nbsp;</span>
              
            }
            <a asp-controller="Tag" asp-action="AddTag" title="Добавить Тег">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                    <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"/>
                </svg>
            </a>
        </div>
        <div>
            <label asp-for="Heading"></label>
            <input asp-for="Heading" class="form-control">
            <span asp-validation-for="Heading"></span>
        </div>
        <div>
            <label asp-for="Post"></label>
            <textarea type="" asp-for="Post" class="form-control"></textarea>
            <span asp-validation-for="Post"></span>
        </div>
        @*         <div>
            <label asp-for="Tag"></label>
            <input asp-for="Tag" class="form-control">
        </div> *@
        <input type="hidden" asp-for="PostId" value="@Model.PostId"/>
        <input type="hidden" asp-for="UserId" value="@Model.UserId"/>
        <input type="hidden" asp-for="Public" value="@DateTime.Now"/>
        
        <div>
            <input type="submit" value="Записать" class="btn btn-secondary"/>
        </div>
    </form>
    <a asp-controller="Home" asp-action="Index">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-door-open" viewBox="0 0 16 16">
          <path d="M8.5 10c-.276 0-.5-.448-.5-1s.224-1 .5-1 .5.448.5 1-.224 1-.5 1"/>
          <path d="M10.828.122A.5.5 0 0 1 11 .5V1h.5A1.5 1.5 0 0 1 13 2.5V15h1.5a.5.5 0 0 1 0 1h-13a.5.5 0 0 1 0-1H3V1.5a.5.5 0 0 1 .43-.495l7-1a.5.5 0 0 1 .398.117M11.5 2H11v13h1V2.5a.5.5 0 0 0-.5-.5M4 1.934V15h6V1.077z"/>
        </svg>Выйти без сохранения
    </a>
</div>

