@model int
@{
    Layout = "_Layout";
    ViewData["Title"] = "Error";
}
<div class="container">
    <div>
        @switch (Model)
        {
            case 404:
                <partial name="Error404" />
                break;
            case 403:
                <partial name="Error403" />
                break;
            default:
                <partial name="Error400" />
                break;
        }
    </div>
    @* <div>@ViewBag.Path</div> *@
</div>