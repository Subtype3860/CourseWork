@model BlogBLL.ViewModels.User.UserEditViewModel
@{
    Layout = "../Admin/_Layout";
}

<div class="container">
    <form method="post" asp-controller="User" asp-action="Edit">
        <div class="container">
            @foreach (var role in Model.AppRoles!)
            {
                <input type="checkbox" name="UserRole" 
                       value="@role.Name" 
                       @(Model.UserRole!.Contains(role.Name!)?"checked":string.Empty)/>@role.Name
            }

            <input type="hidden" asp-for="UserId"/>
            <div>
                <label asp-for="Email"></label><br/>
                <input asp-for="Email" class="form-control"/>
                <span asp-validation-for="Email"></span>
            </div>
            <div>
                <label asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control"/>
                <span asp-validation-for="UserName"></span>
            </div>
            <div>
                <label asp-for="Password"></label><br/>
                <input asp-for="Password" class="form-control"/>
                <span asp-validation-for="Password"></span>
            </div>
            <div>
                <label asp-for="PasswordConfirm"></label>
                <input asp-for="PasswordConfirm" class="form-control"/>
                <span asp-validation-for="PasswordConfirm"></span>
            </div>
            <div>
                <input class="btn btn-secondary" type="submit" value="Записать"/>
            </div>
            <a asp-controller="User" asp-action="Index">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-door-open" viewBox="0 0 16 16">
                  <path d="M8.5 10c-.276 0-.5-.448-.5-1s.224-1 .5-1 .5.448.5 1-.224 1-.5 1"/>
                  <path d="M10.828.122A.5.5 0 0 1 11 .5V1h.5A1.5 1.5 0 0 1 13 2.5V15h1.5a.5.5 0 0 1 0 1h-13a.5.5 0 0 1 0-1H3V1.5a.5.5 0 0 1 .43-.495l7-1a.5.5 0 0 1 .398.117M11.5 2H11v13h1V2.5a.5.5 0 0 0-.5-.5M4 1.934V15h6V1.077z"/>
                </svg>Выйти без сохранения
            </a>
        </div>
    </form>
</div>
